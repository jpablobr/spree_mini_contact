<% @body_id = 'contact' %>
<div id="contact-us">
  <%= hook :contact do %>
    <%= render "shared/error_messages", :target => @contact %>
    <%= form_for(@contact) do |f| %>
      <%= hook :contact_inside_form do %>
        <div class="field">
          <%= f.label :name, t("mini_contact.name") %><br />
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :email, t("mini_contact.email") %><br />
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :phone, t("mini_contact.phone") %><br />
          <%= f.text_field :phone %>
        </div>
        <div class="field">
          <%= f.label :subject, t("mini_contact.subject") %><br />
          <%= f.text_field :subject %>
        </div>
        <div class="field">
          <%= f.label :message, t("mini_contact.message") %><br />
          <%= f.text_area :message %>
        </div>
        <div class="action"><%= f.submit t("mini_contact.send_message"), :class => "button primary" %></div>
      <% end %>
    <% end %>
  <% end %>
</div>
