<% @body_id = 'contact' %>
<div id="contact-us">
  <%= hook :contact do %>
    <%= render "shared/error_messages", :target => @contact %>
    <%= form_for(@contact) do |f| %>
      <%= hook :contact_inside_form do %>
        <div class="field">
          <%= f.label :name, t("name") %><br />
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :email, t("email") %><br />
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :phone, t("phone") %><br />
          <%= f.text_field :phone %>
        </div>
        <div class="field">
          <%= f.label :subject, t("subject") %><br />
          <%= f.text_field :subject %>
        </div>
        <div class="field">
          <%= f.label :message, t("message") %><br />
          <%= f.text_area :message %>
        </div>
        <div class="action"><%= f.submit t("send_message"), :class => "button primary" %></div>
      <% end %>
    <% end %>
  <% end %>
</div>
